{
	"name": "directus-extension-endpoint-gamecenter-signup",
	"description": "Allows an Apple GameCenter client app to post an Apple signed playerId to create a user in Directus and returns OAuth2 tokens for it. This is a directus.io endpoint extension.",
	"icon": "extension",
	"version": "1.0.6",
	"license": "MIT",
	"repository": "github:dhiraj/directus-extension-endpoint-gamecenter-signup",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-custom-endpoint"
	],
	"type": "module",
	"directus:extension": {
		"type": "endpoint",
		"path": "dist/index.js",
		"source": "src/index.ts",
		"host": "^10.3.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "10.3.0",
		"@types/node": "^20.10.8",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@types/jsonwebtoken": "^9.0.5",
		"@types/lodash-es": "^4.17.12",
		"@types/ms": "^0.7.34",
		"jsonwebtoken": "^9.0.2",
		"lodash": "^4.17.21",
		"lodash-es": "^4.17.21",
		"ms": "^2.1.3"
	}
}
